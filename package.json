{
  "name": "eterna",
  "version": "2.0.2",
  "description": "A secure, offline-first personal vault for encrypted storage of journals, passwords, 2FA tokens, and sensitive files. Built with AES-256-GCM encryption and PBKDF2 key derivation.",
  "main": "main.js",
  "author": "Eterna",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win",
    "build:portable": "electron-builder --win portable",
    "publish": "electron-builder --win --publish always"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.7.3"
  },
  "build": {
    "appId": "com.eterna.app",
    "productName": "Eterna",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "encryption.js",
      "secure-memory.js",
      "audit-log.js",
      "index.html",
      "jsqr.min.js",
      "logo.svg",
      "icon.png",
      "tray-icon.png",
      "tray-icon@2x.png",
      "dev-app-update.yml"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "Eterna-Setup-${version}.exe"
    },
    "portable": {
      "artifactName": "Eterna-Portable.exe"
    },
    "publish": {
      "provider": "github",
      "owner": "wutev",
      "repo": "eterna",
      "releaseType": "release"
    }
  }
}
